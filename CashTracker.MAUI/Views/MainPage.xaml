                            <Label LineBreakMode="WordWrap" Grid.Column="4" Text="{Binding Currency}"/>
                            <Label LineBreakMode="WordWrap" Grid.Column="5" Text="{Binding Category}"/>
                            <Label LineBreakMode="WordWrap" Grid.Column="6" Text="{Binding MCC}"/>
                            <Label LineBreakMode="WordWrap" LineHeight="2" Grid.Column="7" Text="{Binding Description}"/>
